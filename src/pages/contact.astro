---
import Contactform from "@components/contactform.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Layout from "@layouts/Layout.astro";
import { Icon } from "astro-icon";
---

<Layout title="Contact">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Contatti</Fragment>
      <Fragment slot="desc">Siamo qui per voi.</Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-medium text-2xl text-gray-800">
          Contatta Reggiani <span class="font-bold text-reggianiRed"
            >S.T.D.</span
          >
        </h2>
        <p class="text-lg leading-relaxed text-slate-500 mt-3">
          Hai qualcosa da dire? Siamo qui per aiutarti. Compila il form o
          chiamaci.
        </p>
        <div class="mt-5">
          <div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:map-marker" />
            <span> Via Besazio 21, 6863 Besazio (CH)</span>
          </div><div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:phone" /><a
              href="tel:+41 (91) 641 70 00">+41 (91) 641 70 00</a
            >
          </div>
        </div>
      </div>
      <div>
        <Contactform />
      </div>
    </div>
  </Container>
</Layout>
